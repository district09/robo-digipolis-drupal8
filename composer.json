{
    "name": "digipolisgent/robo-digipolis-drupal8",
    "description": "Basic deploy flow for a Drupal 8 site.",
    "type": "robo-tasks",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "digipolisgent/robo-digipolis-helpers": "^5.0",
        "digipolisgent/robo-digipolis-package-drupal8": "^1.0",
        "digipolisgent/robo-drush": "^5.0",
        "ircmaxell/random-lib": "^1.2"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "phpunit/phpunit": "^9.5.20"
    },
    "autoload": {
        "psr-4": {
            "DigipolisGent\\Robo\\Drupal8\\": "src"
        }
    },
